--Select all bikes
SELECT * FROM Bikes;
--Select all bikes and their maker
SELECT Makers.Name,Bikes.Model FROM Bikes
JOIN Makers ON Makers.MakerID=Bikes.MakerID;
--Select all bikes from one maker
SELECT Bikes.Model FROM Bikes
JOIN Makers ON Makers.MakerID=Bikes.MakerID
WHERE Makers.Name="?";
--Only the bike's ID, maker, model, and image URL
SELECT Bikes.BikeID,Makers.Name,Bikes.Model,Bikes.ImageURL
FROM Bikes
JOIN Makers ON Makers.MakerID=Bikes.MakerID;
--Only one bike from its ID
SELECT *
FROM Bikes
JOIN Makers ON Makers.MakerID=Bikes.MakerID
WHERE Bikes.BikeID = ?;